{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "blue",
          "background": "transparent",
          "template": "{{ .Path }}",
          "properties": {
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "magenta",
          "background": "transparent",
          "template": "{{ if (.HEAD)}} {{ .HEAD }}{{end}}{{ if or (.Working.Changed) (.Staging.Changed) }}*{{ end }}<red>{{ if gt .Behind 0 }} ⇣{{ end }}{{ if gt .Ahead 0 }} ⇡{{ end }}</>",
          "properties": {
            "branch_icon": "",
            "commit_icon": "@",
            "fetch_status": true
          }
        },
        {
          "type": "nix-shell",
          "style": "plain",
          "foreground": "cyan",
          "background": "transparent",
          "template": "{{ if ne .Type \"unknown\" }}<white> via </>󱄅 shell{{ end }}"
        }
      ]
    },
    {
      "type": "rprompt",
      "overflow": "hidden",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "yellow",
          "background": "transparent",
          "template": "{{ .FormattedMs }}",
          "properties": {
            "threshold": 5000
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "green",
          "background": "transparent",
          "template": "{{ if .SSHSession }}{{ .UserName }}@{{ .HostName }} {{ end }}"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "magenta",
          "foreground_templates": ["{{if gt .Code 0}}red{{end}}", "{{if eq .Code 0}}green{{end}}"],
          "background": "transparent",
          "template": "❯"
        }
      ]
    }
  ],
  "transient_prompt": {
    "foreground_templates": ["{{if gt .Code 0}}red{{end}}", "{{if eq .Code 0}}green{{end}}"],
    "background": "transparent",
    "template": "❯ "
  },
  "secondary_prompt": {
    "foreground": "green",
    "background": "transparent",
    "template": "❯❯ "
  }
}
